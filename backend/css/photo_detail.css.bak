@charset "UTF-8";
/* CSS Document */
table{ border-collapse: collapse;border-spacing: 0; border:none;}

#tabella{position: relative;}
#tabella_head{ z-index:1;border-bottom: 1px solid #cfcfcf;}

#middle_colom {margin-right: 270px;padding: 15px;}
#middle_colom .error input{ border:1px solid #dd0044;}
#middle_colom .error textarea{ border:1px solid #dd0044;}
#right_colom {width: 250px;position: absolute;top:0;right:20px;}
#right_colom .error input{ border:1px solid #dd0044;}
#right_colom .error textarea{ border:1px solid #dd0044;}
#right_colom .error p{ border:1px solid #dd0044;}

.title{ position:relative; width:100%; height:40px;}
.title input{
	position:absolute;
	left:0px;
	right:0px;
	font-size: 21px;
	font-weight: bold;
	height: 33px;
	border: solid 1px #aaaaaa;
	padding: 2px 0 0 8px;
	margin: 0;
}

.box {width: 100%;height: auto;margin-top: 15px;}

.box .head {
	font-size: 18px;
	padding: 6px 0 4px 0;
	border-radius: 5px 5px 0 0;
	background-color: #efeeee;
	background-image: -webkit-gradient(linear,left top,left bottom,from(#f7f7f7),to(#ddd));
	background-image: -webkit-linear-gradient(top,#f7f7f7,#ddd);
	background-image: -moz-linear-gradient(top,#f7f7f7,#ddd);
	background-image: -ms-linear-gradient(top,#f7f7f7,#ddd);
	background-image: -o-linear-gradient(top,#f7f7f7,#ddd);
	background-image: linear-gradient(top,#f7f7f7,#ddd);
	border: 1px solid #cfcfcf;
	position:relative;
}
.box .head span{padding-left:8px;}
.box .center {
	border-left: solid 1px #d9d8d8;
	border-right: solid 1px #d9d8d8;
	min-height:30px;
}

.box .foot {
	background-color: #efeeee;
	background-image: -webkit-gradient(linear,left top,left bottom,from(#f7f7f7),to(#ddd));
	background-image: -webkit-linear-gradient(top,#f7f7f7,#ddd);
	background-image: -moz-linear-gradient(top,#f7f7f7,#ddd);
	background-image: -ms-linear-gradient(top,#f7f7f7,#ddd);
	background-image: -o-linear-gradient(top,#f7f7f7,#ddd);
	background-image: linear-gradient(top,#f7f7f7,#ddd);
	border: 1px solid #cfcfcf;
	height: 10px;
	border-radius: 0 0 5px 5px;
	margin-bottom: 15px;
}


select{ width:185px;}
p.albumName { width:125px !important; }
#pubblicazione .center{padding:8px;}
#pubblicazione p{padding: 6px 0; font-size:13px; }
#pubblicazione p span{ float:right; margin-right:10px;}
#pubblicazione p.pub input.radio {width: auto; border: none;margin: 0 0 0 20px; height: auto;}

#img_cont{position:relative;}
.tagbox{border:1px #f39400 solid;position:absolute; color:#935a00; background: rgba(243,148,0,0.2); font-size:11px;}
.tagbox.p{display:inline-block;background: #f39400; padding: 0 3px; color: #fff;
}
.ui-resizable-handle{z-index:0 !important}
.tag_list{ margin:6px auto;}
.tag_list p.number{ font-size: 12px; display:block; float:left; line-height:22px; width:18px;}
.tag_list p.tagcolor{color:red;}
#tags{padding:8px;}
#data p { display:inline-block; width:50px; }
#data select{ width:auto;}
#data .center div{ padding:7px 10px;}
#data .center div p{ font-size:12px;}

#description table td{ padding-left: 1px;}
#description textarea{width: 100%;min-height: 80px;border: 0;font-family: Arial;font-size: 14px;color: #333;padding: 8px;margin: -8px;outline:none; }
#description table{width:100%;border-spacing:7px;border-collapse: separate;}

#upload{ text-align:center;}
#dragarea{margin-top:20px;min-height: 120px;border:dashed 3px #ccc;-moz-border-radius:12px;-webkit-border-radius:12px;border-radius:12px;text-align:center;display:inline-block; width:95%; }
#dragarea p {color: #ccc;font-size: 18px;margin-top: 45px;}
.sfoglia_cont p{ margin-top:20px; margin-bottom:10px; font-size:12px;}
.remove{margin-top: 2px; border-radius:10px; color:#fff; font-weight:bod; background:#bbb; font-size:12px; text-align:center; float:right; width:18px; padding:2px 0; cursor:default;}
.remove:hover{background:#888;}